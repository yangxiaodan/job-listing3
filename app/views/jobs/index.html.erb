<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown"
  aria-haspopup="true" aria-expanded="true">
    排序
    <span class="caret"></span>
  </button>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按工资下限排列", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("按工资上限排列", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("按发布时间排序",jobs_path) %>
    </li>
  </ul>
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <td>职缺</td>
      <td> 工资下限</td>
      <td>工资上限 </td>
      <td> 发布时间</td>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>

    <tr>
      <td>
        <%= link_to(job.title, job_path(job)) %>
      </td>
      <td>
        <%= job.wage_lower_bound %>
      </td>
      <td>
        <%= job.wage_upper_bound %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
